<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/l1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="60dp"
    android:background="@color/light_milk"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/light_milk"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ButtonSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@color/light_milk"
            android:stateListAnimator="@null"
            android:drawableStart="@drawable/icons_settings"
            />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_height="32dp"
            android:text="@string/good_morning_shay"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/light_milk"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mainUpButtons"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:background="@color/light_milk"
            android:orientation="horizontal">

            <Button
                android:id="@+id/MeetingsManager"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/light_green"
                android:paddingStart="11dp"
                android:textSize="11sp"
                android:paddingEnd="10dp"
                android:drawableEnd="@drawable/hourglass"
                android:text="זמן טוב להתאמן"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/buttonShayStory"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/light_purple"
                android:text="הסיפור שלי"
                android:textSize="11sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:drawableStart="@drawable/shay_pic_small"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainDownButtons"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:background="@color/light_milk"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ButtonLocations"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:textSize="11sp"
                android:background="@color/light_yellow"
                android:text="אני נמצא ב..."
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/ButtonEmergencyNumber"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:textSize="11sp"
                android:background="@color/light_red"
                android:drawableStart="@drawable/avi_pic_small"
                android:paddingStart="17dp"
                android:paddingEnd="10dp"
                android:text="שיחת חירום"
                android:textAllCaps="false" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>